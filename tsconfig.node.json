{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": false, // Desactiva todas las verificaciones estrictas
    "noUnusedLocals": false, // Permite variables locales no usadas
    "noUnusedParameters": false, // Permite par√°metros no usados
    "noFallthroughCasesInSwitch": false // Permite casos no terminados en 'switch'
  },
  "include": ["vite.config.ts"]
}
